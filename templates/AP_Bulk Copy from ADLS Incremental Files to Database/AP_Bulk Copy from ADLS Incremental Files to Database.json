						"name": "CopyDeltaLoad",
						"type": "Copy",
						"dependsOn": [
							{
								"activity": "LoadToStage",
								"dependencyConditions": [
									"Succeeded"
								]
							}
						],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "AzureSqlSource",
								"sqlReaderQuery": "select *\n\tfrom [app_data_stage]\n\t\twhere [Train_Number] > (select max([Train_Number]) [Train_Number] from [app_data])",
								"queryTimeout": "02:00:00",
								"partitionOption": "None"
							},
							"sink": {
								"type": "AzureSqlSink",
								"writeBehavior": "insert",
								"sqlWriterUseTableLock": false,
								"disableMetricsCollection": false
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "Train_Number",
											"type": "String",
											"physicalType": "nvarchar"
										},
										"sink": {
											"name": "Train_Number",
											"type": "String",
											"physicalType": "nvarchar"
										}
									},
									{
										"source": {
											"name": "PAC_Date",
											"type": "DateTime",
											"physicalType": "date"
										},
										"sink": {
											"name": "PAC_Date",
											"type": "DateTime",
											"physicalType": "date"
										}
									},
									{
										"source": {
											"name": "Warranty_Status",
											"type": "String",
											"physicalType": "nvarchar"
										},
										"sink": {
											"name": "Warranty_Status",
											"type": "String",
											"physicalType": "nvarchar"
										}
									},
									{
										"source": {
											"name": "Location",
											"type": "String",
											"physicalType": "nvarchar"
										},
										"sink": {
											"name": "Location",
											"type": "String",
											"physicalType": "nvarchar"
										}
									},
									{
										"source": {
											"name": "RFS_Status",
											"type": "String",
											"physicalType": "nvarchar"
										},
										"sink": {
											"name": "RFS_Status",
											"type": "String",
											"physicalType": "nvarchar"
										}
									},
									{
										"source": {
											"name": "Regime_Category",
											"type": "String",
											"physicalType": "nvarchar"
										},
										"sink": {
											"name": "Regime_Category",
											"type": "String",
											"physicalType": "nvarchar"
										}
									},
