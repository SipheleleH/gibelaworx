						"outputs": [
							{
								"referenceName": "AzureSqlDatabaseSinkDataset",
								"type": "DatasetReference",
								"parameters": {
									"sinkTableName": "app_data"
								}
							}
						]
					}
				],
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/AppData')]",
				"[concat(variables('factoryId'), '/datasets/AppData_Stage')]",
