											"type": "Int32",
											"physicalType": "int"
										},
										"sink": {
											"name": "Actual_Mileage",
											"type": "Int32",
											"physicalType": "int"
										}
									},
									{
										"source": {
											"name": "Forecast_Mileage",
											"type": "Int32",
											"physicalType": "int"
										},
										"sink": {
											"name": "Forecast_Mileage",
											"type": "Int32",
											"physicalType": "int"
										}
									}
								],
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
